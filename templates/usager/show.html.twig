{% extends 'base.html.twig' %}

{% block title %}Usager
{% endblock %}

{% block body %}
	<h1 class="text-center p-2 w-50 mx-auto">Usager</h1>

	<table class="table table-striped shadow bg-opacity-10 mx-auto w-75">
		<tbody>
			<tr>
				<th>ID</th>
				<td>{{ usager.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ usager.nom }}</td>
			</tr>
			<tr>
				<th>Prenom</th>
				<td>{{ usager.prenom }}</td>
			</tr>
			<tr>
				<th>Telephone</th>
				<td>{{ usager.tel }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ usager.email }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ usager.roles ? usager.roles|json_encode : '' }}</td>
			</tr>
			<tr>
				<th>Password</th>
				<td>{{ usager.password }}</td>
			</tr>
			<tr>
				<th>Categorie</th>
				<td>{{ usager.categorie }}</td>
			</tr>
			<tr>
				<th>Niveau</th>
				<td>{{ usager.niveau }}</td>
			</tr>
			<tr>
				<th>Partenaire</th>
				<td>{{ usager.partenaires }}</td>
			</tr>
			<tr>
				<th>Etablissement</th>
				<td>{{ usager.partenaires.typeEtablissement }}</td>
			</tr>
			<tr>
				<th>Quartier</th>
				<td>{{ usager.quartiers }}</td>
			</tr>
			<tr>
				<th>Loisir</th>
				<td>{{ usager.loisir }}</td>
			</tr>
			<tr>
				<th>Adresse</th>
				<td>{{ usager.adresse }}</td>
			</tr>
			<tr>
				<th>Ville</th>
				<td>{{ usager.ville }}</td>
			</tr>
			<tr>
				<th>Code postale</th>
				<td>{{ usager.cp }}</td>
			</tr>
		</tbody>
	</table>
	<div class="d-grid gap-2 d-md-flex justify-content-md-center">
			<a class="btn btn-secondary" href="{{ path('app_usager_index') }}">Retour</a>
		
			<a class="btn btn-success" href="{{ path('app_usager_edit', {'id': usager.id}) }}">Modifier</a>
	
			{{ include('usager/_delete_form.html.twig') }}
		</div>
	
{% endblock %}
